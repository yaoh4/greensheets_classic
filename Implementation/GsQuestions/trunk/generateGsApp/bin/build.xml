<?xml version="1.0" encoding="UTF-8"?>
<project basedir=".." default="makeJar">
    <path id="project.classpath">
        <pathelement path="${classpath}"/>
        <fileset dir="./lib">
            <include name="*.jar"/>
        </fileset>
    </path>
    <property name="project.classpath" refid="project.classpath"/>
    
    
    <target name="compile" description="compiles the java source files using the classpath specified">
        <!-- compile the java source -->
        <javac classpath="${project.classpath}" srcdir="./src" destdir="./classes"/>
    </target>
    
    
    <target name="makeJar" depends="compile">
        <jar destfile="generateGs.jar" basedir="./classes">
            <manifest>
                <attribute name="Main-Class" value="GenerateGS"/>
                <attribute name="Class-Path" value="./lib/xml-apis.jar ./lib/dom4j-1.4.jar ./lib/xalan.jar ./lib/xercesImpl.jar ./lib/classes12.jar"/>
            </manifest>
        </jar>
    </target>
</project>
